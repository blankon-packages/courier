#
# Included from rcptfilter, to verify the sender's address, excluding any
# VERP component (if the local part of the email address includes a dash,
# everything the dash and everything that follows it, until the @, is
# removed).
#
# Must mkdir $HOME/.trackdir before using this.

import SENDER
system '@bindir@/verifysmtp -t $HOME/.trackdir'

if ($RETURNCODE != 0)
{
	EXITCODE=1
	exit
}
